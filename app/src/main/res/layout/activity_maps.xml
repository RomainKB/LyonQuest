<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    tools:context=".MapsActivity" />

    <TextView
        android:id="@+id/maps_activity_ask_delta"
        style="@style/TextStyleGene"
        android:text="@string/riddle_creation_ask_delta"
        tools:context=".MapsActivity"/>

    <EditText
        android:id="@+id/maps_activity_edit_delta"
        style="@style/TextStyleGene"
        tools:context=".MapsActivity"
        android:maxLines="1"
        android:singleLine="true"
        />

    <Button
        android:id="@+id/maps_activity_choose_localisation"
        style="@style/TextStyleGene"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/riddle_creation_choose_localisation"
        tools:context=".MapsActivity"
        android:maxLines="1"
        android:singleLine="true"
        />

</LinearLayout>